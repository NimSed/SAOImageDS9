	@echo "*** $@ ***"
	$(MAKE) -C funtools lib
	cp funtools/funtools.h $(includedir)/.
	cp funtools/filter/*.h $(includedir)/.
	cp funtools/util/*.h $(includedir)/.
	cp funtools/fitsy/*.h $(includedir)/.
	cp funtools/libfuntools.a $(libdir)/.

funtools/Makefile : funtools/configure
	@echo ""
	@echo "*** $@ ***"
	cd funtools; \
	./configure \
	--with-zlib=$(libdir) \
	$(CONFIGFLAGS) $(TARGET) \
	$(PREFIX) \
	--disable-shared

funtools/configure :
	cd funtools; \
	./mkconfigure

